<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:padding="30sp"
    tools:context=".Buyers.SensorsActivity">

    <LinearLayout
        android:id="@+id/sensorsGyroLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10sp">

        <TextView
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/xGyroValue"
            android:textColor="@android:color/black"
            android:layout_width="200sp"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:id="@+id/yGyroValue"
            android:layout_width="200sp"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:id="@+id/zGyroValue"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/sensorsMagneLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/sensorsGyroLayout"
        android:layout_marginTop="10sp">

        <TextView
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:id="@+id/xMagneValue"
            android:layout_width="200sp"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:id="@+id/yMagneValue"
            android:layout_width="200sp"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:id="@+id/zMagneValue"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10sp"
        android:id="@+id/sensorsLayout"
        android:layout_below="@+id/sensorsMagneLayout">

        <TextView
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:id="@+id/light"
            android:layout_width="200sp"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:id="@+id/temperature"/>

        <TextView
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/humidity"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black" />

        <TextView
            android:textSize="20dp"
            android:id="@+id/pressure"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textStyle="bold" />



    </LinearLayout>




</RelativeLayout>